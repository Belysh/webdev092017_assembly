                        li.skills__item
                            svg.skills__elem#node
                            .skills__node.skill__text Node.js &amp; npm
                        li.skills__item
                            svg.skills__elem#mongo
                            .skills__mongo.skill__text Mongo.db
                .skills__workflow
                    .skills__title WorkFlow
                    ul.skills__list
                        li.skills__item
